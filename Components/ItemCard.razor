<div class="item-card">
    <h4>@Name</h4>
    <p><strong>Ingredients:</strong> @Ingredients</p>
    <p class="price">Price: $@Price</p>
</div>

@code {
    [Parameter]
    public string Name { get; set; } = string.Empty;

    [Parameter]
    public string Ingredients { get; set; } = string.Empty;

    [Parameter]
    public decimal Price { get; set; }
}
